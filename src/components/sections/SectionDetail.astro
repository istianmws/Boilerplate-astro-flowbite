---
import Wa from "../icons/Wa.astro";
import Fb from "../icons/Fb.astro";
import Ig from "../icons/Ig.astro";
import Tiktok from "../icons/Tiktok.astro";
import Yt from "../icons/Yt.astro";
import Web from "../icons/Web.astro";
import { Image } from "astro:assets";

interface Pengiklan {
  whatsapp: string;
  instagram: string;
  youtube: string;
  tiktok: string;
  facebook: string;
  website: string;
}
interface Props {
  konten: Object;
  data_pengiklan: Pengiklan;
}

const { konten, data_pengiklan } = Astro.props;
console.log();
const images = konten.foto.data;
---

<section class="px-5 mt-20">
  <div class="grid grid-cols-1 gap-5 lg:gap-8 xl:gap-6 md:grid-cols-12">
    <div class="md:col-span-7">
      <div class="grid gap-4">
        <div>
          <Image
            class="h-auto max-w-full rounded-lg"
            inferSize
            alt="descriptive text"
            src=`${import.meta.env.STRAPI_URL}${konten.foto_utama.data.attributes.formats.small.url}`
          />
        </div>

        <div class="grid grid-cols-3 gap-4">
          {
            images.map((image) => (
              <div>
                <Image
                  class="h-auto max-w-full rounded-lg"
                  alt="descriptive text"
                  src=`${import.meta.env.STRAPI_URL}${image.attributes.formats.small.url}`
                  inferSize
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <!--  -->

    <article class="md:col-span-5 ml-5 max-md:ml-0 max-md:w-full">
      <div class="flex-col justify-center items-start gap-[26px] inline-flex">
        <div class="text-black text-[32px] font-medium font-['Kumbh Sans']">
          {konten.judul}
        </div>
        <div class="self-start">
          {konten.deskripsi_singkat}
        </div>
        <div
          class="text-[#d90429] text-[32px] font-bold font-['Kumbh Sans'] leading-[35px]"
        >
          {konten.harga}
        </div>
        <div class="text-black text-xs font-medium font-['Kumbh Sans']">
          Informasi Pemilik
        </div>
        <div class="text-black text-base font-medium font-['Kumbh Sans']">
          {data_pengiklan.nama}
        </div>

        <div
          class="flex flex-wrap sm:flex-nowrap gap-1.5 text-xs font-bold text-white sm:whitespace-nowrap"
        >
          <!-- WA -->
          {
            data_pengiklan.whatsapp && (
              <a
                href={data_pengiklan.whatsapp}
                class="px-2.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-red-400 rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Wa />
                <span class="text-white text-[8px] font-bold font-['Kumbh Sans']">
                  Hubungi
                </span>
              </a>
            )
          }

          <!-- IG -->
          {
            data_pengiklan.instagram && (
              <a
                href={data_pengiklan.instagram}
                class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-300 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Ig />
              </a>
            )
          }

          <!-- Youtube -->
          {
            data_pengiklan.youtube && (
              <a
                href={data_pengiklan.youtube}
                class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-300 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Yt />
              </a>
            )
          }

          <!-- TIKTOK -->
          {
            data_pengiklan.tiktok && (
              <a
                href={data_pengiklan.tiktok}
                class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-300 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Tiktok />
              </a>
            )
          }

          <!-- Facebook -->
          {
            data_pengiklan.facebook && (
              <a
                href={data_pengiklan.facebook}
                class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-300 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Fb />
              </a>
            )
          }
          <!-- Website -->
          {
            data_pengiklan.website && (
              <a
                href={data_pengiklan.website}
                class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-300 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
              >
                <Web />
              </a>
            )
          }
        </div>
      </div>
    </article>
  </div>

  <div class="flex flex-col mt-12 gap-y-8">
    <div class="text-black text-2xl font-semibold font-['Kumbh Sans']">
      Detail
    </div>
  </div>
</section>
