---
import Wa from "./icons/Wa.astro";
import Fb from "./icons/Fb.astro";
import Ig from "./icons/Ig.astro";
import Tiktok from "./icons/Tiktok.astro";
import Yt from "./icons/Yt.astro";
import Web from "./icons/Web.astro";

interface Props {
	title: string;
	desc: string;
	img: string;
  linkwa: string;
  linkfb: string;
  linkyt: string;
  linktiktok: string;
  linkig: string;
  linkweb: string;
}

const { img, title, desc, linkfb, linkwa, linkig, linktiktok, linkweb, linkyt } = Astro.props;
---

<section class="flex flex-col max-w-[285px]">
  <article
    class="flex flex-col pb-5 w-full bg-white rounded-xl shadow-[0px_4px_4px_rgba(0,0,0,0.1)]"
  >
    <img
      loading="lazy"
      src={img}
      alt="Property image for Rumah Kuda 2"
      class="object-contain w-full rounded-xl aspect-[1.71]"
    />
    <div class="flex flex-col px-5 mt-4 w-full">
      <h2 class="self-start text-base font-semibold text-red-600">
        {title}
      </h2>
      <p class="mt-2.5 text-xs text-neutral-700">
        {desc}
      </p>
      <div
        class="flex gap-1.5 mt-12 text-xs font-bold text-white whitespace-nowrap justify-between"
      >
        <!-- WA -->
        <a
          href={linkwa}
          class="px-2.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-red-400 rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
        >
          <Wa />
          <span class="text-white text-[8px] font-bold font-['Kumbh Sans']"
            >Hubungi</span
          >
        </a>

        <!-- IG -->
        <a
          href="#"
          class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
          ><Ig />
        </a>
        <!-- Youtube -->
        <a
          href="#"
          class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
          ><Yt />
        </a>
        <!-- TIKTOK -->
        <a
          href="#"
          class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
          ><Tiktok />
        </a>
        <!-- Facebook -->
        <a
          href="#"
          class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
          ><Fb />
        </a>
        <!-- Website -->
        <a
          href="#"
          class="px-1.5 py-1 text-xs font-medium text-center inline-flex items-center space-x-2 text-white bg-gray-50 border rounded-lg hover:bg-red-800 focus:ring-1 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-400 dark:focus:ring-red-800"
          ><Web />
        </a>
      </div>
    </div>
  </article>
</section>
